{
  "name": "@ai-validation/api",
  "version": "1.0.0",
  "description": "Express.js API Gateway for AI-Powered Business Idea Validation Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "npm run db:generate && tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:integration": "vitest run tests/integration tests/database",
    "test:integration:watch": "vitest tests/integration tests/database",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "tsx src/database/migrate-cli.ts deploy",
    "db:migrate:status": "tsx src/database/migrate-cli.ts status",
    "db:migrate:validate": "tsx src/database/migrate-cli.ts validate",
    "db:migrate:reset": "tsx src/database/migrate-cli.ts reset",
    "db:push": "prisma db push",
    "db:seed": "tsx src/database/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@ai-validation/orchestrator": "file:../orchestrator",
    "@ai-validation/shared": "file:../shared",
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^3.0.2",
    "commander": "^14.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "vite": "7.0.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.0",
    "prisma": "^6.13.0",
    "supertest": "^6.3.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "gateway"
  ],
  "author": "AI Validation Platform Team",
  "license": "MIT"
}
